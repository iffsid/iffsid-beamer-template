\mode<presentation>

\usecolortheme{iffsid}

% \useoutertheme{sidebar}
\useinnertheme{rounded}
\useinnertheme{circles}

\setbeamertemplate{background canvas}[vertical shading][bottom=fui_black,top=fui_black]

\setbeamertemplate{footline}[frame number]{} %sets frame numbers in the footer
\setbeamerfont{page number in head/foot}{size=\tiny} % page number size
\setbeamertemplate{navigation symbols}{} %hides navigation symbols

\setbeamerfont{note page}{family*=pplx,size=\scriptsize} % Palatino for notes
\addtobeamertemplate{note page}{\setlength{\parskip}{12pt}}

\setbeamerfont{title}{size=\Huge,series=\bfseries}
\setbeamerfont{author}{size=\Large}
\setbeamerfont{date}{size=\footnotesize}
\setbeamerfont{block title}{size={},series=\bfseries}

\setbeamertemplate{frametitle}{%
  % \begin{flushleft}
  \textbf{\insertframetitle}\\
  {\small\quad\textbf{\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}}
  % \end{flushleft}
}
%% If you want to reformat the title page
%% http://tex.stackexchange.com/questions/22346/how-to-customize-titlepage-in-beamer

\setbeamerfont{section number projected}{%
  family=\rmfamily,series=\bfseries,size=\scriptsize}

% \setbeamertemplate{bibliography item}{[\theenumiv]}
\setbeamertemplate{bibliography item}[triangle]

\setbeamerfont{date in head/foot}{size=\tiny}

\newcommand{\lightbg}[1]{\colorbox{fui_white}{#1}}

\titlegraphic{\includegraphics[width=0.15\textwidth]{SU_Seal_White_transparent_ondark}}

\setbeamersize{text margin left=15pt}
%% this makes itemizes fade rather than vanish
% \setbeamercovered{highly dynamic}

%% better maths fonts
%% https://tex.stackexchange.com/questions/34265/how-to-get-beamer-math-to-look-like-article-math
\usefonttheme[onlymath]{serif}

\newenvironment{frame-colour}[1]%
{\bgroup
  \setbeamertemplate{background canvas}[vertical shading][bottom=#1,top=#1]
  \begin{frame}}
  {\end{frame}
  \egroup
  \setbeamertemplate{background canvas}[vertical shading][bottom=fui_black,top=fui_black]}

\newenvironment{frame-image}[1]%
{\bgroup\setbeamertemplate{background canvas}{\CenterWallPaper{1}{#1}}\begin{frame}}
{\end{frame}\egroup}

